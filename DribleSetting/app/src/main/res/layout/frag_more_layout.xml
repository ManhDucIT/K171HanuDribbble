<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundAppColor">

    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="?attr/containerColor"
        android:elevation="5dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/jobs_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_click_animation"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/jobs_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.5"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_job_24"
                android:tint="@color/Dr_grey"></ImageView>

            <TextView
                android:id="@+id/job_text"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="9.5"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="Jobs"
                android:textColor="?attr/primaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/job_right_arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:tint="@color/Dr_grey"></ImageView>
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"></View>

        <LinearLayout
            android:id="@+id/shop_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_click_animation"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/shop_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.5"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_shopping_basket_24"
                android:tint="@color/Dr_grey"></ImageView>

            <TextView
                android:id="@+id/shop_text"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="9.5"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="Shop"
                android:textColor="?attr/primaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/job_shop_arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:tint="@color/Dr_grey"></ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="?attr/containerColor"
        android:elevation="5dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group1">

        <LinearLayout
            android:id="@+id/report_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_click_animation"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/report_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.5"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_report_24"
                android:tint="@color/Dr_grey"></ImageView>

            <TextView
                android:id="@+id/report_text"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="9.5"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="Report Debug"
                android:textColor="?attr/primaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/report_right_arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:tint="@color/Dr_grey"></ImageView>
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"></View>

        <LinearLayout
            android:id="@+id/mode_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_click_animation"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/mode_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.5"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_nights_stay_24"
                android:tint="@color/Dr_grey"></ImageView>

            <TextView
                android:id="@+id/mode_text"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="9.5"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="Night Mode"
                android:textColor="?attr/primaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/mode_right_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"></androidx.appcompat.widget.SwitchCompat>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/Dr_white"
        android:elevation="5dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group2">

        <LinearLayout
            android:id="@+id/setting_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_click_animation"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.5"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_settings_24"
                android:tint="@color/Dr_grey"></ImageView>

            <TextView
                android:id="@+id/setting_text"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="9.5"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="Settings"
                android:textColor="?attr/primaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/setting_right_arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:tint="@color/Dr_grey"></ImageView>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>