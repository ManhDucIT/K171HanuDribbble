<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="#f2f2f2"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="fitXY"
        android:paddingTop="20dp"
        android:paddingBottom="70dp"
        android:layout_below="@id/author"
        android:src="@drawable/cou"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/avatar"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="4dp"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_avatar"
        android:text="Hello"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        android:layout_below="@+id/status"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="normal"
        android:textSize="12sp"
        android:text="PhamDucToan"
        android:layout_toRightOf="@+id/item_avatar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=",5 thg 7, 2020"
        android:layout_toRightOf="@+id/author"
        android:layout_below="@+id/status"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:layout_marginTop="6dp"/>
     <ImageView
         android:id="@+id/heartic"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/heart"
         android:layout_below="@+id/image"
         android:layout_marginTop="-50dp"
         android:layout_marginLeft="16dp"/>
    <TextView
        android:id="@+id/heartNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/heartic"
        android:layout_below="@+id/image"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/commentic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/heartNo"
        android:src="@drawable/comment_24"
        android:layout_below="@+id/image"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="22dp"/>
    <TextView
        android:id="@+id/commentNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/commentic"
        android:layout_below="@+id/image"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/seenic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/commentNo"
        android:src="@drawable/red_eye_24"
        android:layout_below="@+id/image"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="22dp"/>
    <TextView
        android:id="@+id/seenNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/seenic"
        android:layout_below="@+id/image"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>
</RelativeLayout>